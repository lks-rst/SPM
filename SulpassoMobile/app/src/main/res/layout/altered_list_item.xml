<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/padding_inferior"
    android:paddingLeft="@dimen/padding_direita">

    <LinearLayout
        android:id="@+id/llAssunto"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            style="@style/texts.labels.bigger"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Lucas Pinheir Rosseti"
            android:id="@+id/lblAliCod" />

        <TextView
            style="@style/texts.labels.bigger"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="01/01/2017"
            android:id="@+id/lblAliRef" />

        <TextView
            style="@style/texts.labels.bigger"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:gravity="right|center_vertical"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="31/01/2017"
            android:id="@+id/lblAliComp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            style="@style/texts.labels.bigger"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Lucas Pinheir Rosseti"
            android:id="@+id/lblAliDesc"
            android:layout_weight="1" />


    </LinearLayout>

</LinearLayout>