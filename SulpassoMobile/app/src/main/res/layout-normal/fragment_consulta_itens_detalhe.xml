<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/edtAlertDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:enabled="false"
            android:clickable="false"
            android:focusable="false"
            android:textSize="13dp"
            android:ems="10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/textsSmall.labels"
                android:text="@string/lbl_comp" />

            <EditText
                android:id="@+id/edtAlertComplemento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:textColor="@color/colorAccent"
                android:clickable="false"
                android:focusable="false"
                android:textSize="13dp"
                android:ems="8" />

            <TextView
                style="@style/textsSmall.labels"
                android:layout_gravity="right|center_vertical"
                android:text="@string/lbl_ref" />

            <EditText
                android:id="@+id/edtAlertReferencia"
                android:layout_width="wrap_content"
                android:textColor="@color/colorAccent"
                android:enabled="false"
                android:clickable="false"
                android:textSize="13dp"
                android:focusable="false"
                android:layout_height="wrap_content"
                android:ems="8" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.1"
                style="@style/textsSmall.labels"
                android:text="@string/lbl_un" />

            <EditText
                android:id="@+id/edtAlertUnidade"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:textColor="@color/colorAccent"
                android:enabled="false"
                android:clickable="false"
                android:focusable="false"
                android:textSize="13dp"
                android:layout_height="wrap_content"
                android:ems="10" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.15"
                style="@style/textsSmall.labels"
                android:text="@string/lbl_uv"/>

            <EditText
                android:id="@+id/edtAlertUniVenda"
                android:layout_width="0dp"
                android:textColor="@color/colorAccent"
                android:layout_weight="0.2"
                android:enabled="false"
                android:clickable="false"
                android:focusable="false"
                android:textSize="13dp"
                android:layout_height="wrap_content"
                android:ems="10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.25"
                style="@style/textsSmall.labels"
                android:text="@string/lbl_qtd_caixa"/>

            <EditText
                android:id="@+id/edtAlertCaixa"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:enabled="false"
                android:clickable="false"
                android:focusable="false"
                android:textSize="13dp"
                android:ems="10" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.25"
                style="@style/textsSmall.labels"
                android:text="@string/lbl_qtd_vda" />

            <EditText
                android:id="@+id/edtAlertQuantidade"
                android:textColor="@color/colorAccent"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:enabled="false"
                android:clickable="false"
                android:focusable="false"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:ems="10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >


            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.25"
                style="@style/textsSmall.labels"
                android:text="@string/lbl_estoque" />

            <EditText
                android:id="@+id/edtAlertEstoque"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:clickable="false"
                android:focusable="false"
                android:textSize="13dp"
                android:ems="10" />


            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.25"
                style="@style/textsSmall.labels"
                android:text="@string/lbl_barras"/>

            <EditText
                android:id="@+id/edtAlertBarras"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:textColor="@color/colorAccent"
                android:enabled="false"
                android:clickable="false"
                android:focusable="false"
                android:singleLine="true"
                android:textSize="13dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal" >

        <ListView
            android:id="@+id/liAlertTabelas"
            android:layout_width="0dp"
            android:layout_weight="0.49"
            android:layout_height="fill_parent" >
        </ListView>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.01"
            android:layout_height="fill_parent"/>

        <ListView
            android:id="@+id/liAlertPromocoes"
            android:layout_width="0dp"
            android:layout_weight="0.49"
            android:layout_height="fill_parent" >
        </ListView>
    </LinearLayout>

    <EditText
        android:id="@+id/edtAlertAplicacao"
        android:layout_width="match_parent"
        android:enabled="false"
        android:clickable="false"
        android:focusable="false"
        android:layout_height="match_parent"
        android:textSize="13dp"
        android:inputType="textMultiLine" />

</LinearLayout>