<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    style="@style/rootView.fragdesenv"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_marginTop="@dimen/margem_superior"
            android:paddingTop="5dp"
            android:paddingLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    style="@style/rootView.fragdesenv.frame.textos"
                    android:text="@string/apresentacao_1" />

                <TextView
                    style="@style/rootView.fragdesenv.frame.textos.negrito"
                    android:textStyle="bold"
                    android:text="@string/apresentacao_2" />
            </LinearLayout>

            <TextView
                style="@style/rootView.fragdesenv.frame.textos"
                android:text="@string/contato_fone" />

            <TextView
                style="@style/rootView.fragdesenv.frame.textos"
                android:text="@string/contato_email" />
        </LinearLayout>

        <FrameLayout style="@style/rootView.fragdesenv.frame" >

            <ImageView
                android:id="@+id/tela_inicial_img_sulpasso"
                style="@style/rootView.fragdesenv.frame.imagens"
                android:contentDescription="@string/action_settings"
                android:src="@drawable/btn_sulpasso" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/rootView.fragdesenv"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/fidTxtValidade"
            style="@style/rootView.fragdesenv.frame.textos"
            android:text="@string/validade_data"
            android:textSize="20sp" />

        <TextView
            android:layout_marginLeft="50dp"
            android:id="@+id/fidTxtVersao"
            style="@style/rootView.fragdesenv.frame.textos"
            android:text="@string/versao"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>